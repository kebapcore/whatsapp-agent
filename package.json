{
  "name": "whatsapp-ai-agent",
  "version": "2.0.0",
  "description": "Production-ready WhatsApp AI Agent with Gemini - Desktop Application for Linux",
  "main": "src/main/index.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run electron -- --dev\" \"npm run dev\"",
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron-dev": "nodemon --exec \"electron .\"",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css}\""
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "@mui/system": "^5.14.0",
    "axios": "^1.5.0",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^2.0.0",
    "express": "^4.18.2",
    "qrcode-terminal": "^0.12.0",
    "qrcode.react": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "whatsapp-web.js": "^1.25.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.0",
    "@electron-forge/maker-deb": "^6.4.0",
    "@electron-forge/maker-rpm": "^6.4.0",
    "@types/electron": "^1.6.10",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "vite": "^4.5.0"
  },
  "build": {
    "appId": "com.whatsapp-agent.app",
    "productName": "WhatsApp Agent",
    "directories": {
      "buildResources": "public"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
